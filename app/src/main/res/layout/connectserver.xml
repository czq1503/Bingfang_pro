<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.zq.bingfang_pro.MainActivity">


    <EditText
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:textColorHint="#95A1AA"
            android:ems="10"
            android:maxLength="6"
            android:background="@drawable/txt_radiuborder"
            android:gravity="center"
            android:id="@+id/port" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.682"
            app:layout_constraintVertical_bias="0.372"/>
    <Button
            android:text="连接"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.519"/>
    <TextView
            android:text="IP"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:textSize="30sp"
            android:id="@+id/checkBox" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.259" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.292"/>
    <TextView
            android:text="port"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:textSize="30sp"
            android:id="@+id/checkBox2" android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.311"
            app:layout_constraintVertical_bias="0.37"/>

    <EditText
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:textColorHint="#95A1AA"
            android:ems="10"
            android:maxLength="15"
            android:digits="1234567890."
            android:gravity="center"
            android:background="@drawable/txt_radiuborder"
            android:id="@+id/ip" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintVertical_bias="0.261"/>
    <TextView
            android:text="病房监控"
            android:layout_width="190dp"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/txt_rectborder"
            android:layout_height="50dp" android:id="@+id/textView"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.046" android:textStyle="bold"/>
    <android.support.v4.view.ViewPager
            android:id="@+id/vpager_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
</android.support.constraint.ConstraintLayout>
